doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title 文件类型转换
    link(rel="stylesheet" href="/stylesheets/bootstrap.min.css" crossorigin="anonymous")
  body
    .container
      .mt-5.mb-3 文件类型转换
      form(action="/file-converter" method="post" enctype="multipart/form-data")
        .mb-3
          label(for="file" class="form-label") 选择文件：
          input.form-control(type="file" name="file" id="file")
        .mb-3
          label(for="format" class="form-label") 转换到格式：
          select.form-select(name="format" id="format")
            option(value="markdown") markdown
            option(value="pdf") PDF
        button.btn.btn-primary(type="submit") 转换


    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous")